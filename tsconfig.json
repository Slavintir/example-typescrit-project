{
    "compileOnSave": true,
    "compilerOptions": {
        "experimentalDecorators": true,
        "outDir": "dist",
        "module": "commonjs",
        "target": "es2017",
        "sourceMap": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "strict": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}